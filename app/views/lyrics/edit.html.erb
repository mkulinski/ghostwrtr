<div class="margin-top booyah-box col-xs-8 col-xs-offset-2">
    <br />
    <%= link_to 'Delete', lyric_path(@lyric), method: :delete, data: {confirm: 'Are you sure?' }, class: 'pull-right' %>
    <div class="inner-form col-xs-offset-4">
    <div>
      <h1 class="text-center">Edit Lyrics</h1>
      <hr />
      <%= simple_form_for @lyric do |f| %>
        <%= f.input :title %>
        <br />
        <div class="form-group">
          <%= f.label :genre %> 
          <%= f.select(:genre, options_for_select(['Hiphop', 'Country']), {}, {class: "form-control"}) %>
        </div>
        <br />
        <%= f.input :song_lyrics, class: 'song_lyrics' %>
        <br />
        <%= f.input :image %>
        <br />
        <%= f.submit 'Add Song', class: 'btn btn-primary btn-xl' %>
      <% end %>
    </div>
    </div>
</div>