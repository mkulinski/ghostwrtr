<div class="margin-top col-xs-8 col-xs-offset-2">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed table-hover text-center">
        <thead>
            <tr class="text-center">
                <th>Musician</th>
                <th>Song Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
          <% @lyrics.each do |lyric| %>
            <tr>
              <td>
                <% if lyric.user.present? %>
                  <%= lyric.user.email %>
                <% end %>
              </td>
              <td><%= lyric.title %></td>
              <td class="genre"><%= lyric.genre %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>