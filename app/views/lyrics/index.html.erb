<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% @lyrics.each do |lyric| %>
    <div class="card">
      <% if current_user && current_user == lyric.user %>
        <%= link_to 'Edit', edit_lyric_path(lyric), class: 'pull-right' %>
      <% end %>

      <div class="handle"><%= lyric.user.username %></div>
      <div class="short-line"><%= link_to lyric.title, lyric_path(lyric) %></div>
      <div class="long-handle"><%= lyric.genre_id %></div>
      <div class="lyric-image"><%= image_tag lyric.image, class: 'img-responsive' %></div>
   
    </div>
  <% end %>
</div>