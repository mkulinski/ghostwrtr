<div class="margin-top booyah-box col-xs-8 col-xs-offset-2">
  <h2 class="text-center">Add Lyric</h2>
  <hr />
    <div class="inner-form col-xs-offset-3">
      <%= simple_form_for @lyric do |f| %>
        <%= f.input :title %>
        <br />
        <div class="form-group">
          <%= f.label :genre %> 
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, {:include_blank => true}, {class: "form-control"}) %>
        </div>
        <br />
        <%= f.input :song_lyrics, placeholder: '*ProTip* if you need more room, drag the botton right corner!', class: 'song_lyrics' %>
        <br />
        <%= f.input :image %>
        <br />
        <%= f.submit 'Add Song', class: 'btn btn-primary btn-xl' %>
      <% end %>
    </div>
</div> 

