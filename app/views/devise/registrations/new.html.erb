<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="text-center inner-form col-xs-offset-4">
  <h2>Sign up</h2>
  <br />
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  <br />
    <div class="form-inputs">
      <%= f.input :username, required: true, autofocus: true, placeholder: 'Name', label: false %>
      <br />
      <%= f.input :email, required: true, placeholder: 'Email', label: false %>
      <br />
      <%= f.input :password, required: true, placeholder: 'Password', label: false %>
      <br />
      <%= f.input :password_confirmation, required: true, placeholder: 'Re-Enter Password', label: false %>
    </div>
  <br />
    <div class="form-actions">
      <%= f.button :submit, "Sign up", :class => 'btn btn-primary' %>
      <button class="btn btn-primary"><%= render "devise/shared/links" %></button>
    </div>
  <% end %>
  <br />
</div>
</div>
